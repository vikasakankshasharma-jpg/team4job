{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "The unique identifier for the user, in the format [ROLE]-[YYYYMMDD]-[RANDOM]."
        },
        "name": {
          "type": "string",
          "description": "The user's full name."
        },
        "email": {
          "type": "string",
          "description": "The user's email address.",
          "format": "email"
        },
        "mobile": {
          "type": "string",
          "description": "The user's 10-digit mobile number."
        },
        "avatarUrl": {
          "type": "string",
          "description": "URL for the user's anonymous SVG avatar."
        },
        "realAvatarUrl": {
          "type": "string",
          "description": "URL for the user's real profile picture."
        },
        "pincodes": {
          "type": "object",
          "properties": {
            "residential": {
              "type": "string"
            },
            "office": {
              "type": "string"
            }
          },
          "required": ["residential"]
        },
        "roles": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["Job Giver", "Installer", "Admin"]
          }
        },
        "memberSince": {
          "type": "string",
          "format": "date-time"
        },
        "freeBids": {
          "type": "number",
          "description": "Number of free bids remaining for a new installer."
        },
        "freeJobs": {
          "type": "number",
          "description": "Number of free job posts remaining for a new job giver."
        },
        "creditsExpiry": {
          "type": "string",
          "format": "date-time",
          "description": "The expiry date for the free credits."
        },
        "installerProfile": {
          "$ref": "#/entities/InstallerProfile"
        }
      },
      "required": ["id", "name", "email", "mobile", "avatarUrl", "pincodes", "roles", "memberSince"]
    },
    "InstallerProfile": {
      "title": "Installer Profile",
      "description": "Specific profile details for users who are installers.",
      "type": "object",
      "properties": {
        "tier": {
          "type": "string",
          "enum": ["Bronze", "Silver", "Gold", "Platinum"]
        },
        "points": {
          "type": "number"
        },
        "skills": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "rating": {
          "type": "number"
        },
        "reviews": {
          "type": "number"
        },
        "verified": {
          "type": "boolean"
        }
      },
      "required": ["tier", "points", "skills", "rating", "reviews", "verified"]
    },
    "Job": {
      "title": "Job",
      "description": "Represents a job posting on the platform.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "jobGiver": {
          "$ref": "#/entities/UserProfile"
        },
        "location": {
          "type": "string"
        },
        "fullAddress": {
          "type": "string"
        },
        "budget": {
          "type": "object",
          "properties": {
            "min": {
              "type": "number"
            },
            "max": {
              "type": "number"
            }
          },
          "required": ["min", "max"]
        },
        "status": {
          "type": "string",
          "enum": ["Open for Bidding", "Bidding Closed", "Awarded", "In Progress", "Completed", "Cancelled", "Unbid"]
        },
        "deadline": {
          "type": "string",
          "format": "date-time"
        },
        "jobStartDate": {
          "type": "string",
          "format": "date-time"
        },
        "postedAt": {
          "type": "string",
          "format": "date-time"
        },
        "awardedInstaller": {
          "$ref": "#/entities/UserProfile"
        },
        "rating": {
          "type": "number"
        },
        "completionOtp": {
          "type": "string"
        },
        "disputeId": {
          "type": "string",
          "description": "The ID of the dispute associated with this job, if any."
        }
      },
      "required": ["id", "title", "description", "jobGiver", "location", "budget", "status", "deadline", "postedAt"]
    },
    "Bid": {
      "title": "Bid",
      "description": "Represents a bid made by an installer on a job.",
      "type": "object",
      "properties": {
        "installer": {
          "$ref": "#/entities/UserProfile"
        },
        "amount": {
          "type": "number"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "coverLetter": {
          "type": "string"
        }
      },
      "required": ["installer", "amount", "timestamp"]
    },
    "Comment": {
      "title": "Comment",
      "description": "A comment on a job posting.",
      "type": "object",
      "properties": {
        "author": {
          "$ref": "#/entities/UserProfile"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "content": {
          "type": "string"
        }
      },
      "required": ["author", "timestamp", "content"]
    },
    "Dispute": {
      "title": "Dispute",
      "description": "Represents a dispute raised for a job between a Job Giver and an Installer.",
      "type": "object",
      "properties": {
        "jobId": {
          "type": "string",
          "description": "The ID of the job this dispute is related to."
        },
        "jobTitle": {
          "type": "string",
          "description": "The title of the job in dispute."
        },
        "status": {
          "type": "string",
          "enum": ["Open", "Under Review", "Resolved"],
          "description": "The current status of the dispute."
        },
        "reason": {
          "type": "string",
          "description": "The initial reason for raising the dispute."
        },
        "parties": {
          "type": "object",
          "properties": {
            "jobGiverId": { "type": "string" },
            "installerId": { "type": "string" }
          },
          "required": ["jobGiverId", "installerId"]
        },
        "messages": {
          "type": "array",
          "items": {
            "$ref": "#/entities/DisputeMessage"
          }
        },
        "resolution": {
          "type": "string",
          "description": "The final resolution summary provided by the admin."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "resolvedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["jobId", "jobTitle", "status", "reason", "parties", "createdAt"]
    },
    "DisputeMessage": {
      "title": "Dispute Message",
      "description": "A message within a dispute thread.",
      "type": "object",
      "properties": {
        "authorId": { "type": "string" },
        "authorRole": { "type": "string", "enum": ["Job Giver", "Installer", "Admin"] },
        "content": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" },
        "attachments": {
            "type": "array",
            "items": {
                "$ref": "#/entities/DisputeAttachment"
            },
            "description": "A list of files attached to the message."
        }
      },
      "required": ["authorId", "authorRole", "content", "timestamp"]
    },
    "DisputeAttachment": {
        "title": "Dispute Attachment",
        "description": "Represents a file attached to a dispute message.",
        "type": "object",
        "properties": {
            "fileName": { "type": "string" },
            "fileUrl": { "type": "string", "format": "uri" },
            "fileType": { "type": "string" }
        },
        "required": ["fileName", "fileUrl", "fileType"]
    }
  },
  "auth": {
    "providers": ["email"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores individual user profiles."
    },
    "/jobs/{jobId}": {
      "schema": {
        "$ref": "#/entities/Job"
      },
      "description": "Stores all job postings. Bids and comments are embedded within each job document."
    },
    "/disputes/{disputeId}": {
      "schema": {
        "$ref": "#/entities/Dispute"
      },
      "description": "Stores all dispute records for jobs."
    }
  }
}

    