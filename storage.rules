rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Check if image
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    // Max size 5MB
    function isValidSize() {
      return request.resource.size < 5 * 1024 * 1024;
    }

    // Profile Images
    match /users/{userId}/avatar {
      allow read: if true;
      allow write: if isAuthenticated() && request.auth.uid == userId && isImage() && isValidSize();
    }

    // Job Attachments
    match /jobs/{jobId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isImage() && isValidSize(); // Basic allow for now, ideally check if user involved in job
    }

    // Dispute Evidence
    match /disputes/{disputeId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isImage() && isValidSize();
    }
    
    // Default Deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
