rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAdmin() {
      // Check if the user has an 'Admin' role in their user document.
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.hasAny(['Admin']);
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Default Deny: Secure all paths by default.
    match /{document=**} {
      allow read, write: if false;
    }

    // users collection
    match /users/{userId} {
      // Any authenticated user can read any user's profile. Necessary for displaying user info on jobs/bids.
      allow read: if request.auth != null;
      // A user can only create their own profile.
      allow create: if isOwner(userId);
      // A user can only update their own profile, or an Admin can.
      allow update: if isOwner(userId) || isAdmin();
      // Only Admins can delete users.
      allow delete: if isAdmin();
    }
    
    // jobs collection
    match /jobs/{jobId} {
      // Any authenticated user can read or list jobs.
      allow read, list: if request.auth != null;
      // Any authenticated user can create a job.
      allow create: if request.auth != null;
      // Only the Job Giver or an Admin can update a job.
      allow update: if get(/databases/$(database)/documents/jobs/$(jobId)).data.jobGiver.id == request.auth.uid || isAdmin();
      // Only Admins can delete jobs.
      allow delete: if isAdmin();
    }

    // disputes collection
    match /disputes/{disputeId} {
      // Users can read disputes they are part of. Admins can read any.
      allow read: if request.auth.uid == resource.data.requesterId || request.auth.uid == resource.data.parties.jobGiverId || request.auth.uid == resource.data.parties.installerId || isAdmin();
      // Any authenticated user can create a dispute.
      allow create: if request.auth != null;
      // Only participants or Admins can update.
      allow update: if request.auth.uid == resource.data.requesterId || request.auth.uid == resource.data.parties.jobGiverId || request.auth.uid == resource.data.parties.installerId || isAdmin();
      // Only Admins can delete disputes.
      allow delete: if isAdmin();
    }
    
    // blacklist collection
    match /blacklist/{blacklistId} {
      // Any authenticated user can read the blacklist (needed for login check).
      allow read, list: if request.auth != null;
      // Only Admins can write to the blacklist.
      allow write: if isAdmin();
    }
    
    // coupons and subscriptionPlans collections
    match /coupons/{couponId} {
      allow read, list: if request.auth != null;
      // Only Admins can write to coupons.
      allow write: if isAdmin();
    }

    match /subscriptionPlans/{planId} {
       // Only Admins can manage plans.
      allow read, list, write: if isAdmin();
    }
  }
}
