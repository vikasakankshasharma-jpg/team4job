
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isAdmin() {
      return isSignedIn() && getUserData().roles.hasAny(['Admin']);
    }

    // --- Collection Rules ---

    match /users/{userId} {
      // ANY signed-in user can read any user's profile (for profile pages, job details, etc.)
      allow read, list: if isSignedIn();
      // A user can ONLY create their own profile document.
      allow create: if isOwner(userId);
      // A user can ONLY update their own profile.
      allow update: if isOwner(userId);
      // ONLY an admin can delete a user profile.
      allow delete: if isAdmin();
    }

    match /jobs/{jobId} {
      // ANY signed-in user can read or query jobs.
      allow read, list: if isSignedIn();
      // ANY signed-in user can create a job.
      allow create: if isSignedIn();
      // ONLY the original job giver or an admin can update a job.
      allow update: if (isSignedIn() && request.resource.data.jobGiver == request.auth.uid) || isAdmin();
      // ONLY an admin can delete a job.
      allow delete: if isAdmin();
    }

    match /disputes/{disputeId} {
      // Allow read/update only if user is the requester, one of the parties, or an admin.
      allow read, update: if isSignedIn() && (
        resource.data.requesterId == request.auth.uid ||
        request.auth.uid in resource.data.parties.values() ||
        isAdmin()
      );
      // Any signed-in user can create a dispute.
      allow create: if isSignedIn();
      // Only admin can delete.
      allow delete: if isAdmin();
      // Allow list only if the user is involved in the dispute.
      // This is a common pattern for privacy.
      allow list: if isSignedIn() && (
          (request.query.where.field == 'requesterId' && request.query.where.value == request.auth.uid) ||
          (request.query.where.field == 'parties.jobGiverId' && request.query.where.value == request.auth.uid) ||
          (request.query.where.field == 'parties.installerId' && request.query.where.value == request.auth.uid) ||
          isAdmin()
      );
    }

    match /blacklist/{blacklistId} {
      // Allow any authenticated user to read the blacklist (for login checks).
      allow read, list: if isSignedIn();
      // ONLY admin can write to the blacklist.
      allow create, update, delete: if isAdmin();
    }

    match /coupons/{couponId} {
      // Allow any authenticated user to read/list coupons.
      allow read, list: if isSignedIn();
      // ONLY admin can write to coupons.
      allow create, update, delete: if isAdmin();
    }
    
    match /subscriptionPlans/{planId} {
      // Allow any authenticated user to read/list subscription plans.
      allow read, list: if isSignedIn();
      // ONLY admin can write to subscription plans.
      allow create, update, delete: if isAdmin();
    }
    
    match /transactions/{transactionId} {
        // Only involved parties or admin can see transactions.
        allow read: if isSignedIn() && (
            resource.data.payerId == request.auth.uid || 
            resource.data.payeeId == request.auth.uid ||
            isAdmin()
        );
        allow list: if isSignedIn(); // Queries must be filtered on frontend.
        // Writes are complex and would be handled by trusted server code (Cloud Functions).
        allow write: if false; 
    }
  }
}

    