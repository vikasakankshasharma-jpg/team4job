
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read their own profile
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow write: if request.auth.uid == userId;
    }
    
    // Anyone authenticated can read public user data (like profiles for jobs)
    // For simplicity in the demo, we allow reads. In production, you'd restrict this.
    match /users/{userId} {
       allow get: if request.auth != null;
    }

    // Jobs can be created by any authenticated user (Job Giver).
    // They can be read by anyone (to browse jobs).
    // Updates are more complex (handled by backend/security rules).
    match /jobs/{jobId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      // Allow updates only by the job giver or an admin for simplicity
      allow update: if request.auth != null && (resource.data.jobGiver == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.hasAny(['Admin']));
    }
    
    // Disputes can be created by authenticated users.
    // They can only be read/updated by involved parties or an admin.
    match /disputes/{disputeId} {
        allow create: if request.auth != null;
        allow read, write: if request.auth != null && (resource.data.requesterId == request.auth.uid || resource.data.parties.jobGiverId == request.auth.uid || resource.data.parties.installerId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.hasAny(['Admin']));
    }
  }
}
