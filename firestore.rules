
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isUser(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isRole(role) {
      return isSignedIn() && getUserData(request.auth.uid).roles.hasAny([role]);
    }

    function isAdmin() {
      return isRole('Admin');
    }
    
    // --- Collection Rules ---

    match /users/{userId} {
      allow create: if isUser(userId);
      allow read: if isSignedIn();
      allow update: if isUser(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    match /jobs/{jobId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if (isSignedIn() && getUserData(request.auth.uid).id == resource.data.jobGiver.id) || isAdmin();
      allow delete: if isAdmin();
    }
    
    match /disputes/{disputeId} {
      function isParty() {
        return request.auth.uid == resource.data.requesterId ||
               request.auth.uid == resource.data.parties.jobGiverId ||
               request.auth.uid == resource.data.parties.installerId;
      }
      
      allow read, update: if isSignedIn() && (isParty() || isAdmin());
      allow create: if isSignedIn();
      allow delete: if isAdmin();
      // List operation is broad for simplicity; client must filter to what user can see
      allow list: if isSignedIn();
    }

    match /blacklist/{blacklistId} {
      allow read, list: if isSignedIn(); // All signed-in users must be able to check blacklist for safety
      allow create, update, delete: if isAdmin();
    }

    match /coupons/{couponId} {
      allow read, list: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }
    
    match /subscriptionPlans/{planId} {
      allow read, list: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    match /transactions/{transactionId} {
        function isTransactionParty() {
            return request.auth.uid == resource.data.payerId || request.auth.uid == resource.data.payeeId;
        }

        allow read: if isSignedIn() && (isTransactionParty() || isAdmin());
        // List operation is broad for simplicity; client must filter to what user can see
        allow list: if isSignedIn();
        // Transactions should only be created/updated via server-side logic (e.g. Cloud Functions)
        allow create, update, delete: if false; 
    }
  }
}
