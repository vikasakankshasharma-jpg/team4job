rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helpers
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserRoles() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles;
    }

    function isAdmin() {
      // Use hasAny to check for 'Admin' in the roles array.
      return isSignedIn() && 'Admin' in getUserRoles();
    }
    
    function isJobGiver() {
       return isSignedIn() && 'Job Giver' in getUserRoles();
    }
    
    function isInstaller() {
       return isSignedIn() && 'Installer' in getUserRoles();
    }

    // Users - Read by any signed-in user, owner can modify, admin can delete
    match /users/{userId} {
      allow read, list: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Jobs - Read/write rules per role
    match /jobs/{jobId} {
      allow read, list: if isSignedIn(); // Allow lists; frontend queries control filtering
      allow create: if isSignedIn();
      // Allow update if user is the job giver or an admin
      allow update: if (isSignedIn() && get(/databases/$(database)/documents/jobs/$(jobId)).data.jobGiver.id == request.auth.uid) || isAdmin();
      allow delete: if isAdmin();
    }

    // Disputes - Read/update if user is party or admin
    match /disputes/{disputeId} {
      allow read, update: if isSignedIn() &&
        (resource.data.requesterId == request.auth.uid ||
         request.auth.uid == resource.data.parties.jobGiverId ||
         request.auth.uid == resource.data.parties.installerId ||
         isAdmin());
      allow create: if isSignedIn();
      allow delete: if isAdmin();
      // list is implicitly handled by the read rule on individual gets, 
      // but we allow specific filtered lists for the dashboard page.
      allow list: if isSignedIn();
    }

    // Blacklist - Read list by signed-in; admin writes only
    match /blacklist/{blacklistId} {
      allow read, list: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    // Coupons
    match /coupons/{couponId} {
      allow read, list: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    // Subscription Plans
    match /subscriptionPlans/{planId} {
      allow read, list: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    // Transactions - read if involved or admin, list allowed but frontend filters
    match /transactions/{transactionId} {
      allow read: if isSignedIn() &&
        (resource.data.payerId == request.auth.uid ||
         resource.data.payeeId == request.auth.uid ||
         isAdmin());
      allow list: if isSignedIn();  // Frontend must filter queries by payerId or payeeId
      allow write: if false; // Should be handled by a backend function
    }
  }
}
