rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check for Admin role
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.hasAny(['Admin']);
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow any authenticated user to read any profile (for showing job giver/installer info)
      // Allow any authenticated user to list users (for searching/directory)
      allow list, read: if request.auth != null;
      
      // Allow a user to create their own user document
      allow create: if request.auth.uid == userId;

      // Allow a user to update only their own document
      allow update: if request.auth.uid == userId;
      
      // Disallow deletion of user profiles for now
      allow delete: if false;
    }

    // Rules for the 'jobs' collection
    match /jobs/{jobId} {
      // Allow any authenticated user to read or list jobs
      allow list, read: if request.auth != null;
      
      // Allow any authenticated user to create a job
      allow create: if request.auth != null;
      
      // Allow updates only by the original job giver
      allow update: if request.auth != null && request.auth.uid == resource.data.jobGiver.id;
      
      // Disallow deletion of jobs for now
      allow delete: if false;
    }

    // Rules for the 'disputes' collection
    match /disputes/{disputeId} {
        // Allow read/list only if the user is a party to the dispute OR is an admin
        allow list, read: if request.auth != null && 
          (
            (resource.data.requesterId == request.auth.uid) ||
            (resource.data.parties.jobGiverId == request.auth.uid) ||
            (resource.data.parties.installerId == request.auth.uid) ||
            isAdmin()
          );

        // Allow any authenticated user to create a dispute
        allow create: if request.auth != null;

        // Allow updates only from parties involved or an admin
        allow update: if request.auth != null &&
          (
            (resource.data.requesterId == request.auth.uid) ||
            (resource.data.parties.jobGiverId == request.auth.uid) ||
            (resource.data.parties.installerId == request.auth.uid) ||
            isAdmin()
          );

        // Only Admins can delete disputes
        allow delete: if isAdmin();
    }
    
    // Admin-only collections
    match /coupons/{couponId} {
      allow read, write: if isAdmin();
    }
    
    match /blacklist/{entryId} {
      // Any authenticated user can read the blacklist to check their status
      allow read: if request.auth != null;
      // Only admins can write to the blacklist
      allow write: if isAdmin();
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
