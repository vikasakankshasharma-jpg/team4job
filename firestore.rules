
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions
    function isAuth() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles[0] == 'Admin';
    }
    
    function isDisputeParticipant(dispute) {
      let isRequester = request.auth.uid == dispute.requesterId;
      let isParty = request.auth.uid in [dispute.parties.jobGiverId, dispute.parties.installerId];
      return isRequester || isParty;
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // USERS
    match /users/{userId} {
      allow list, read: if isAuth();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // JOBS
    match /jobs/{jobId} {
      allow list, read: if isAuth();
      allow create: if isAuth();
      allow update: if isAuth() && (resource.data.jobGiver == get(/databases/$(database)/documents/users/$(request.auth.uid)).id || isAdmin());
      allow delete: if isAdmin();
    }
    
    // BLACKLIST
    match /blacklist/{entry} {
      allow list, read: if isAuth();
      allow create, update, delete: if isAdmin();
    }
    
    // COUPONS & SUBSCRIPTIONS
    match /coupons/{couponId} {
      allow read, write: if isAdmin();
    }
    
    match /subscriptionPlans/{planId} {
       allow read, write: if isAdmin();
    }
    
    // DISPUTES
    match /disputes/{disputeId} {
      allow list: if isAuth();
      allow read: if isAuth() && (isDisputeParticipant(resource.data) || isAdmin());
      allow create: if isAuth();
      allow update: if isAuth() && (isDisputeParticipant(resource.data) || isAdmin());
      allow delete: if isAdmin();
    }
    
     // TRANSACTIONS
    match /transactions/{transactionId} {
        allow read, write: if isAdmin();
    }
  }
}
