
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.hasAny(['Admin']);
    }

    // --- Collection Rules ---

    // USERS: Publicly readable, but only the owner can write.
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }
    
    // JOBS: Publicly readable, anyone can create, owner can update.
    match /jobs/{jobId} {
      allow read, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource.data.jobGiver.id == request.auth.uid;
    }

    // DISPUTES: Readable by participants, creatable by anyone signed in.
    match /disputes/{disputeId} {
        function isParticipant() {
            let disputeData = resource.data;
            return request.auth.uid == disputeData.requesterId ||
                   (disputeData.parties != null && (
                     request.auth.uid == disputeData.parties.jobGiverId ||
                     request.auth.uid == disputeData.parties.installerId
                   ));
        }

        allow read: if (isParticipant() || isAdmin());
        allow create: if isSignedIn();
        allow update: if (isParticipant() || isAdmin());
    }

    // BLACKLIST: Readable by anyone authenticated (for client-side checks), writable only by admin.
    match /blacklist/{entry} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }

    // COUPONS: Admin-only access.
    match /coupons/{code} {
        allow read, write: if isAdmin();
    }
    
    // SUBSCRIPTION PLANS: Admin-only access.
    match /subscriptionPlans/{planId} {
        allow read, write: if isAdmin();
    }
    
    // TRANSACTIONS: No direct client access. Handled by server functions.
    match /transactions/{transactionId} {
      allow read, write: if false;
    }
  }
}
