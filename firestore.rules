
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserData() {
      // Note: This can be costly. Use sparingly in rules.
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      // Check for a custom claim first for efficiency. Fallback to doc read.
      return isSignedIn() && ('admin' in request.auth.token && request.auth.token.admin == true);
    }
    
    // This helper checks if the user's role is in the provided list.
    // It's less efficient than claims but works for this structure.
    function hasAnyRole(roles) {
      return isSignedIn() && getUserData().roles.hasAny(roles);
    }

    // --- Collection Rules ---

    // Users: Read-only for any signed-in user. Write restricted to owner or admin.
    match /users/{userId} {
      allow read, list: if isSignedIn();
      allow create: if isOwner(userId); // A user can create their own profile
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Jobs: Any signed-in user can read/list. This relies on frontend queries being correct.
    // Writes are restricted to job givers for their own jobs or admins.
    match /jobs/{jobId} {
      allow read, list: if isSignedIn();
      allow create: if isSignedIn(); // A signed-in user can create a job.
      allow update: if (isSignedIn() && (
        (request.resource.data.jobGiver == request.auth.uid) || // JobGiver can update their own job
         isAdmin()
      ));
      allow delete: if isAdmin();
    }

    // Disputes: Read/update restricted to involved parties. List is constrained to match frontend queries.
    match /disputes/{disputeId} {
      allow read, update: if isSignedIn() && (
          resource.data.requesterId == request.auth.uid ||
          (resource.data.parties != null && request.auth.uid in resource.data.parties.values()) ||
          isAdmin()
      );
      allow create: if isSignedIn();
      allow delete: if isAdmin();

      // List rule supports the three separate queries made by the frontend.
      allow list: if isSignedIn() && (
        (request.query.where.field == 'requesterId' && request.query.where.value == request.auth.uid) ||
        (request.query.where.field == 'parties.jobGiverId' && request.query.where.value == request.auth.uid) ||
        (request.query.where.field == 'parties.installerId' && request.query.where.value == request.auth.uid) ||
        isAdmin()
      );
    }

    // Blacklist: Admin-only writes. Reads for signed-in users (e.g., for self-check on login).
    match /blacklist/{blacklistId} {
      allow read, list: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    // Coupons: Admin-only writes. Reads for signed-in users.
    match /coupons/{couponId} {
      allow read, list: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    // Subscription Plans: Admin-only writes. Reads for signed-in users.
    match /subscriptionPlans/{planId} {
        allow read, list: if isSignedIn();
        allow create, update, delete: if isAdmin();
    }
    
    // Transactions: Read-only for involved parties. Writes must be server-side.
    match /transactions/{transactionId} {
       allow read: if isSignedIn() && (
         resource.data.payerId == request.auth.uid ||
         resource.data.payeeId == request.auth.uid ||
         isAdmin()
       );
       // Frontend must filter queries by payerId or payeeId.
       allow list: if isSignedIn();
       allow write: if false; // Disallow all client-side writes
    }
  }
}
