
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isUser(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isSignedIn() && getUserData().roles[0] == 'Admin';
    }

    // --- Collection Rules ---

    match /users/{userId} {
      // Any authenticated user can read any user's profile (for profile pages, job details, etc.)
      allow read: if isSignedIn();
      // A user can only create their own profile
      allow create: if isUser(userId);
      // A user can only update their own profile, but an admin can update any
      allow update: if isUser(userId) || isAdmin();
      // Only an admin can delete a user
      allow delete: if isAdmin();
    }

    match /jobs/{jobId} {
      // Any authenticated user can read or list jobs
      allow read, list: if isSignedIn();
      // Any authenticated user can create a job (role check is done client-side)
      allow create: if isSignedIn();
      // Only the job giver or an admin can update a job
      allow update: if (isSignedIn() && request.resource.data.jobGiver == request.auth.uid) || isAdmin();
      // Only an admin can delete a job
      allow delete: if isAdmin();
    }

    match /disputes/{disputeId} {
      // Only participants or an admin can read a dispute
      allow read, update: if isSignedIn() && (
        resource.data.requesterId == request.auth.uid ||
        request.auth.uid in resource.data.parties.values() ||
        isAdmin()
      );
      // Any authenticated user can create a dispute
      allow create: if isSignedIn();
      // Only an admin can delete a dispute
      allow delete: if isAdmin();
      // Allow list operations for a user's own disputes (client must provide correct filter)
      allow list: if isSignedIn();
    }

    match /blacklist/{blacklistId} {
        // Any authenticated user can read the blacklist (needed for login check)
        allow read, list: if isSignedIn();
        // Only admins can modify the blacklist
        allow create, update, delete: if isAdmin();
    }

    match /coupons/{couponId} {
        // Any authenticated user can read coupons to redeem them
        allow read, list: if isSignedIn();
        // Only admins can create/modify coupons
        allow create, update, delete: if isAdmin();
    }
    
    match /subscriptionPlans/{planId} {
        // Plans are public readable
        allow read, list: if isSignedIn();
        // Only admins can modify plans
        allow create, update, delete: if isAdmin();
    }
    
    match /transactions/{transactionId} {
        // Only participants or admins can view transactions
        allow read: if isSignedIn() && (
            resource.data.payerId == request.auth.uid ||
            resource.data.payeeId == request.auth.uid ||
            isAdmin()
        );
        allow list: if isSignedIn();
        // Writes should be handled by a secure backend function
        allow write: if false;
    }
  }
}

    