rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check for Admin role
    function isAdmin() {
      return request.auth.token.roles.hasAny(['Admin']);
    }

    // Users can create their own profile, and read/update their own data.
    // Any authenticated user can read any other user's profile.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;
      // Disallow deletes for now to prevent data loss
      allow delete: if false;
    }

    // Jobs can be read by anyone authenticated.
    // They can only be created by an authenticated user.
    // They can only be updated by the original job giver.
    match /jobs/{jobId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.resource.data.jobGiver == request.auth.uid;
      // Disallow deletes for now
      allow delete: if false;
    }
    
    // Disputes can only be managed by Admins.
    // Users interact with disputes via the Job document itself.
    match /disputes/{disputeId} {
        allow read, write: if isAdmin();
    }
    
    // Coupons can only be managed by Admins.
    match /coupons/{couponCode} {
      allow read, write: if isAdmin();
    }
    
    // Blacklist can only be managed by Admins.
    match /blacklist/{blacklistId} {
        allow read, write: if isAdmin();
    }

    // All other collections are locked down by default.
  }
}
