rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuth() {
      return request.auth != null;
    }

    // --- User Profiles ---
    match /users/{userId} {
      // Allow anyone to create their own user document during signup
      allow create: if request.auth.uid == userId;
      // Allow authenticated users to read any profile
      allow read: if isAuth();
      // Allow users to only update their own profile
      allow update: if isAuth() && request.auth.uid == userId;
      // Disallow deleting user profiles for now
      allow delete: if false;
    }

    // --- Jobs ---
    match /jobs/{jobId} {
      // Any authenticated user can read jobs
      allow read: if isAuth();
      // Only authenticated users can create jobs
      allow create: if isAuth();
      // Only the original job giver can update their job post
      allow update: if isAuth() && request.resource.data.jobGiver == request.auth.uid;
      // For now, disallow deleting jobs
      allow delete: if false;
    }

    // --- Disputes ---
    match /disputes/{disputeId} {
      // Allow involved parties (requester, job giver, installer) and admins to read
      allow read: if isAuth() && (
        resource.data.requesterId == request.auth.uid ||
        resource.data.parties.jobGiverId == request.auth.uid ||
        resource.data.parties.installerId == request.auth.uid
      );
      // Allow authenticated users to create a dispute
      allow create: if isAuth();
      // Allow involved parties to add messages (update)
      allow update: if isAuth() && (
        resource.data.requesterId == request.auth.uid ||
        resource.data.parties.jobGiverId == request.auth.uid ||
        resource.data.parties.installerId == request.auth.uid
      );
      // Disallow deleting disputes
      allow delete: if false;
    }
    
    // --- Blacklist: Read for users, Write for Admins ---
    match /blacklist/{entry} {
      // All authenticated users need to check this on login
      allow read: if isAuth();
      // Only admins can add, update, or remove blacklist entries
      allow write: if false; // No write access for users. Admin access should be handled via backend functions.
    }
    
    // --- Other Admin-only collections ---
    match /coupons/{couponId} {
      allow read, write: if false;
    }
    
    match /subscriptionPlans/{planId} {
      allow read, write: if false;
    }
    
    match /transactions/{transactionId} {
        allow read, write: if false;
    }
  }
}
