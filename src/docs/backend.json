

{
  "entities": {
    "Address": {
      "title": "Structured Address",
      "description": "Represents a structured physical address.",
      "type": "object",
      "properties": {
        "house": { "type": "string", "description": "House/Flat number and building name." },
        "street": { "type": "string", "description": "Street name and area/colony." },
        "landmark": { "type": "string", "description": "A nearby landmark (optional)." },
        "cityPincode": { "type": "string", "description": "The city and pincode, e.g., 'Jaipur, 302012'." }
      },
      "required": ["house", "street", "cityPincode"]
    },
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information, including roles and platform-specific data.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "The unique identifier for the user, matching the Firebase Auth UID."
        },
        "name": {
          "type": "string",
          "description": "The user's full name."
        },
        "email": {
          "type": "string",
          "description": "The user's email address.",
          "format": "email"
        },
        "mobile": {
          "type": "string",
          "description": "The user's 10-digit mobile number."
        },
        "address": { "$ref": "#/entities/Address" },
        "avatarUrl": {
          "type": "string",
          "description": "URL for the user's anonymous SVG avatar."
        },
        "realAvatarUrl": {
          "type": "string",
          "description": "URL for the user's real profile picture."
        },
        "pincodes": {
          "type": "object",
          "properties": {
            "residential": {
              "type": "string"
            },
            "office": {
              "type": "string"
            }
          },
          "required": ["residential"]
        },
        "roles": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["Job Giver", "Installer", "Admin", "Support Team"]
          }
        },
        "status": {
          "type": "string",
          "enum": ["active", "suspended", "deactivated"],
          "description": "The current status of the user's account."
        },
        "suspensionEndDate": {
          "type": "string",
          "format": "date-time",
          "description": "If the user is suspended, this is the date their suspension ends."
        },
        "memberSince": {
          "type": "string",
          "format": "date-time"
        },
        "subscription": {
          "type": "object",
          "properties": {
              "planId": { "type": "string" },
              "planName": { "type": "string" },
              "expiresAt": { "type": "string", "format": "date-time" }
          }
        },
        "aadharNumber": {
          "type": "string",
          "description": "The user's 12-digit Aadhar number, stored after successful KYC."
        },
        "kycAddress": {
          "type": "string",
          "description": "The permanent address fetched from the Aadhar KYC verification."
        },
        "installerProfile": {
          "$ref": "#/entities/InstallerProfile"
        }
      },
      "required": ["id", "name", "email", "mobile", "address", "avatarUrl", "pincodes", "roles", "memberSince", "status"]
    },
    "InstallerProfile": {
      "title": "Installer Profile",
      "description": "Specific profile details for users who are installers, tracking their reputation and skills.",
      "type": "object",
      "properties": {
        "tier": {
          "type": "string",
          "enum": ["Bronze", "Silver", "Gold", "Platinum"]
        },
        "points": {
          "type": "number"
        },
        "skills": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "rating": {
          "type": "number"
        },
        "reviews": {
          "type": "number"
        },
        "verified": {
          "type": "boolean"
        },
        "reputationHistory": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "month": { "type": "string" },
              "points": { "type": "number" }
            }
          }
        }
      },
      "required": ["tier", "points", "skills", "rating", "reviews", "verified"]
    },
    "SubscriptionPlan": {
        "title": "Subscription Plan",
        "description": "Defines a subscription plan for a user role.",
        "type": "object",
        "properties": {
            "id": { "type": "string" },
            "name": { "type": "string" },
            "description": { "type": "string" },
            "price": { "type": "number" },
            "role": { "type": "string", "enum": ["Job Giver", "Installer"] },
            "features": { "type": "array", "items": { "type": "string" } },
            "trialPeriodDays": { "type": "number", "description": "Default trial period in days for new users of this role." }
        },
        "required": ["id", "name", "price", "role", "features"]
    },
    "Coupon": {
      "title": "Coupon Code",
      "description": "A promotional code that grants subscription benefits.",
      "type": "object",
      "properties": {
        "code": {
          "type": "string",
          "description": "The unique, user-facing coupon code (e.g., 'WELCOME2024'). Acts as the document ID."
        },
        "description": {
          "type": "string",
          "description": "A brief explanation of what the coupon provides."
        },
        "planId": {
          "type": "string",
          "description": "The ID of the subscription plan this coupon grants access to."
        },
        "durationDays": {
          "type": "number",
          "description": "The number of days the subscription is extended for."
        },
        "applicableToRole": {
          "type": "string",
          "enum": ["Installer", "Job Giver", "Any"],
          "description": "The user role this coupon can be applied to."
        },
        "validFrom": {
          "type": "string",
          "format": "date-time"
        },
        "validUntil": {
          "type": "string",
          "format": "date-time"
        },
        "isActive": {
          "type": "boolean"
        }
      },
      "required": ["code", "description", "planId", "durationDays", "applicableToRole", "validFrom", "validUntil", "isActive"]
    },
    "Job": {
      "title": "Job",
      "description": "Represents a job posting on the platform, including all associated data like bids and messages.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "jobGiver": {
          "$ref": "#/entities/UserProfile"
        },
        "location": {
          "type": "string",
          "description": "The primary pincode of the job location."
        },
        "fullAddress": {
            "type": "string",
            "description": "The full, geocoded address for the job."
        },
        "address": {
          "$ref": "#/entities/Address"
        },
        "budget": {
          "type": "object",
          "properties": {
            "min": {
              "type": "number"
            },
            "max": {
              "type": "number"
            }
          },
          "required": ["min", "max"]
        },
        "status": {
          "type": "string",
          "enum": ["Open for Bidding", "Bidding Closed", "Awarded", "In Progress", "Completed", "Cancelled", "Unbid"]
        },
        "deadline": {
          "type": "string",
          "format": "date-time"
        },
        "jobStartDate": {
          "type": "string",
          "format": "date-time"
        },
        "postedAt": {
          "type": "string",
          "format": "date-time"
        },
        "acceptanceDeadline": {
            "type": "string",
            "format": "date-time",
            "description": "The timestamp by which an awarded installer must accept the job."
        },
        "awardedInstaller": {
          "$ref": "#/entities/UserProfile"
        },
        "bidderIds": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "A list of user IDs who have bid on the job, for efficient querying."
        },
        "rating": {
          "type": "number"
        },
        "completionOtp": {
          "type": "string"
        },
        "disputeId": {
          "type": "string",
          "description": "The ID of the dispute associated with this job, if any."
        },
        "attachments": {
          "type": "array",
          "items": {
            "$ref": "#/entities/JobAttachment"
          }
        },
        "comments": {
          "type": "array",
          "items": {
            "$ref": "#/entities/Comment"
          }
        },
        "privateMessages": {
            "type": "array",
            "items": {
                "$ref": "#/entities/PrivateMessage"
            }
        },
        "selectedInstallers": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "installerId": { "type": "string" },
                    "rank": { "type": "number" }
                }
            }
        }
      },
      "required": ["id", "title", "description", "jobGiver", "location", "address", "budget", "status", "deadline", "postedAt"]
    },
    "JobAttachment": {
      "title": "Job Attachment",
      "description": "Represents a file attached to a job posting to provide more context.",
      "type": "object",
      "properties": {
        "fileName": { "type": "string" },
        "fileUrl": { "type": "string", "format": "uri" },
        "fileType": { "type": "string" }
      },
      "required": ["fileName", "fileUrl", "fileType"]
    },
    "Bid": {
      "title": "Bid",
      "description": "Represents a bid made by an installer on a job.",
      "type": "object",
      "properties": {
        "installer": {
          "$ref": "#/entities/UserProfile"
        },
        "amount": {
          "type": "number"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "coverLetter": {
          "type": "string"
        }
      },
      "required": ["installer", "amount", "timestamp"]
    },
    "Comment": {
      "title": "Comment",
      "description": "A public comment on a job posting, visible to all during the bidding phase.",
      "type": "object",
      "properties": {
        "author": {
          "$ref": "#/entities/UserProfile"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "content": {
          "type": "string"
        }
      },
      "required": ["author", "timestamp", "content"]
    },
     "PrivateMessage": {
      "title": "Private Message",
      "description": "A private message on a job between the job giver and the awarded installer.",
      "type": "object",
      "properties": {
        "author": {
          "$ref": "#/entities/UserProfile"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "content": {
          "type": "string"
        },
         "attachments": {
          "type": "array",
          "items": {
            "$ref": "#/entities/JobAttachment"
          },
          "description": "A list of files attached to the message."
        }
      },
      "required": ["author", "timestamp", "content"]
    },
    "Dispute": {
      "title": "Dispute",
      "description": "Represents a dispute or support ticket raised by a user, which can be mediated by an Admin.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "requesterId": {
          "type": "string",
          "description": "The ID of the user who initiated the dispute or request."
        },
        "category": {
          "type": "string",
          "enum": ["Job Dispute", "Billing Inquiry", "Technical Support", "Skill Request", "General Question"],
          "description": "The category of the dispute or support ticket."
        },
        "title": {
            "type": "string",
            "description": "The title of the dispute or request."
        },
        "jobId": {
          "type": "string",
          "description": "The ID of the job this dispute is related to (optional)."
        },
        "jobTitle": {
          "type": "string",
          "description": "The title of the job in dispute (optional)."
        },
        "status": {
          "type": "string",
          "enum": ["Open", "Under Review", "Resolved"],
          "description": "The current status of the dispute."
        },
        "reason": {
          "type": "string",
          "description": "The initial reason for raising the dispute."
        },
        "parties": {
          "type": "object",
          "properties": {
            "jobGiverId": { "type": "string" },
            "installerId": { "type": "string" }
          }
        },
        "messages": {
          "type": "array",
          "items": {
            "$ref": "#/entities/DisputeMessage"
          }
        },
        "resolution": {
          "type": "string",
          "description": "The final resolution summary provided by the admin."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "resolvedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["id", "requesterId", "category", "title", "status", "reason", "createdAt"]
    },
    "DisputeMessage": {
      "title": "Dispute Message",
      "description": "A message within a dispute thread, visible to all parties and the admin.",
      "type": "object",
      "properties": {
        "authorId": { "type": "string" },
        "authorRole": { "type": "string", "enum": ["Job Giver", "Installer", "Admin", "Support Team"] },
        "content": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" },
        "attachments": {
            "type": "array",
            "items": {
                "$ref": "#/entities/DisputeAttachment"
            },
            "description": "A list of files attached to the message as evidence."
        }
      },
      "required": ["authorId", "authorRole", "content", "timestamp"]
    },
    "DisputeAttachment": {
        "title": "Dispute Attachment",
        "description": "Represents a file attached to a dispute message as evidence.",
        "type": "object",
        "properties": {
            "fileName": { "type": "string" },
            "fileUrl": { "type": "string", "format": "uri" },
            "fileType": { "type": "string" }
        },
        "required": ["fileName", "fileUrl", "fileType"]
    },
    "BlacklistEntry": {
      "title": "Blacklist Entry",
      "description": "An entry for a blacklisted user ID or pincode.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["user", "pincode"]
        },
        "value": {
          "type": "string",
          "description": "The User ID or pincode to be blacklisted."
        },
        "role": {
          "type": "string",
          "enum": ["Any", "Installer", "Job Giver"],
          "description": "The role for which the blacklist applies."
        },
        "reason": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["id", "type", "value", "role", "reason", "createdAt"]
    },
    "Transaction": {
      "title": "Transaction",
      "description": "Represents a financial transaction for a job, using a Payment Gateway and Payout system.",
      "type": "object",
      "properties": {
        "id": { "type": "string", "description": "Our internal unique ID for the transaction." },
        "jobId": { "type": "string" },
        "jobTitle": { "type": "string" },
        "payerId": { "type": "string", "description": "The user ID of the Job Giver." },
        "payerName": { "type": "string" },
        "payeeId": { "type": "string", "description": "The user ID of the Installer." },
        "payeeName": { "type": "string" },
        "amount": { "type": "number" },
        "status": {
          "type": "string",
          "enum": ["Initiated", "Funded", "Failed", "Released", "Refunded"]
        },
        "paymentGatewayOrderId": { "type": "string", "description": "The order ID from Cashfree Payments." },
        "paymentGatewaySessionId": { "type": "string", "description": "The session ID used to launch the Cashfree checkout." },
        "createdAt": { "type": "string", "format": "date-time", "description": "Timestamp for when the transaction was initiated." },
        "fundedAt": { "type": "string", "format": "date-time", "description": "Timestamp for when payment was successfully captured by the gateway." },
        "failedAt": { "type": "string", "format": "date-time", "description": "Timestamp for when the payment failed." },
        "releasedAt": { "type": "string", "format": "date-time", "description": "Timestamp for when funds were released to the installer via the payout system." },
        "refundedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "jobId", "jobTitle", "payerId", "payeeId", "amount", "status", "createdAt"]
    }
  },
  "auth": {
    "providers": ["email"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores individual user profiles."
    },
    "/jobs/{jobId}": {
      "schema": {
        "$ref": "#/entities/Job"
      },
      "description": "Stores all job postings. Bids, public comments, and private messages are embedded within each job document."
    },
    "/disputes/{disputeId}": {
      "schema": {
        "$ref": "#/entities/Dispute"
      },
      "description": "Stores all dispute records for jobs, including the full communication history."
    },
    "/subscriptionPlans/{planId}": {
        "schema": {
            "$ref": "#/entities/SubscriptionPlan"
        },
        "description": "Stores all available subscription plans."
    },
    "/coupons/{couponCode}": {
      "schema": {
        "$ref": "#/entities/Coupon"
      },
      "description": "Stores all promotional coupon codes."
    },
    "/blacklist/{blacklistId}": {
      "schema": {
        "$ref": "#/entities/BlacklistEntry"
      },
      "description": "Stores all blacklisted user IDs and pincodes."
    },
    "/transactions/{transactionId}": {
      "schema": {
        "$ref": "#/entities/Transaction"
      },
      "description": "Stores all financial transactions related to jobs."
    }
  }
}
